{
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/gentoo-post.yml",
      "inventory_file": "ansible/inventory"
    },
    {
      "type": "shell",
      "inline": [
          "sleep 600000"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "builds/box.ovf",
      "headless": true,
      "http_directory": "http",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "vm_name": "packer-gentoo-x86_64"
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{.Provider}}-gentoo-post.box",
      "type": "vagrant"
    }
  ]
}
